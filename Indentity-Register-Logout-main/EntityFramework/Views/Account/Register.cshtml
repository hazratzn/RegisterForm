@model RegisterVM
<div class="d-flex justify-content-center ">
    <div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form method="post" asp-action="Register">
            <div class="form-group">
                <h4 class="border-bottom pb-2">Login</h4>
                <input asp-for="FullName" id="" class="mb-4" placeholder="Full Name">
                <span asp-validation-for="FullName"></span>
            </div>
            <div class="form-group">
                <input asp-for="UserName" id="" class="mb-4" placeholder="User Name">
                <span asp-validation-for="UserName"></span>
            </div>
            <div class="form-group">
                <input asp-for="Email" id="" class="mb-4" placeholder="Email Address">
                <span asp-validation-for="Email"></span>

            </div>
            <div class="form-group">
                <input asp-for="Password" id="" class="mb-4" placeholder="Password">
                <span asp-validation-for="Password"></span>

            </div>
            <div class="form-group">
                <input asp-for="ConfirmPassword" id="" class="mb-4" placeholder="Confirm Password">
                <span asp-validation-for="ConfirmPassword"></span>

            </div>

            <span>Remember Me</span>
            <button type="submit" class="mb-3">Log In</button>
            <p><a href="#">Lost Your Password</a></p>
        </form>
        
    </div>

</div>

@section Scripts{
    <partial name="_ValidationPartialView" />
}
